{
  "name": "psa/event-sourcing",
  "description": "Event Sourcing Library",
  "type": "library",
  "authors": [
    {
      "name": "Florian Kr√§mer",
      "email": "fk@world-architects.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "beberlei/assert": "^3.2",
    "ramsey/uuid": "^3.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.2",
    "squizlabs/php_codesniffer": "^3.4",
    "phpro/grumphp": "^0.15.2",
    "prooph/event-store": "dev-master as 8.0.0-BETA-2",
    "prooph/event-store-http-client": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Psa\\EventSourcing\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Psa\\EventSourcing\\Cache\\Test\\": "tests\\TestCase"
    }
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true,
    "prestissimo": {
      "maxConnections": 12,
      "minConnections": 6
    }
  }
}
