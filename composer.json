{
	"name": "psa/event-sourcing",
	"description": "Event Sourcing Library",
	"type": "library",
	"authors": [
		{
			"name": "Florian Kr√§mer",
			"email": "fk@world-architects.com"
		}
	],
	"require": {
		"php": "^7.2",
		"beberlei/assert": "^3.2",
		"ramsey/uuid": "^3.8"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.2",
		"squizlabs/php_codesniffer": "^3.4"
	},
	"autoload": {
		"psr-4": {
			"Psa\\EventSourcing\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Psa\\EventSourcing\\Test\\": "tests\\"
		}
	},
	"scripts": {
		"test": [
			".\\bin\\phpunit"
		],
		"cscheck": [
			".\\bin\\phpcs .\\src .\\tests"
		],
		"csfix": [
			".\\bin\\phpcbf .\\src .\\tests"
		],
		"analyze": [
			".\\bin\\phpstan analyse -l 1 -c phpstan.neon .\\src\\"
		]
	},
	"config": {
		"bin-dir": "bin",
		"sort-packages": true,
		"prestissimo": {
			"maxConnections": 12,
			"minConnections": 6
		}
	}
}
